{
  "expo": {
    "name": "PengaduanApp",
    "slug": "pengaduanapp",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/images/icon512.png",
    "scheme": "pengaduanapp",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/icon512.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hilmyhafizh.pengaduanapp",
      "infoPlist": {
        "NSCameraUsageDescription": "Aplikasi memerlukan akses kamera untuk mengambil foto bukti pengaduan",
        "NSLocationWhenInUseUsageDescription": "Aplikasi memerlukan akses lokasi untuk mencatat lokasi pengaduan",
        "NSPhotoLibraryUsageDescription": "Aplikasi memerlukan akses galeri untuk memilih foto bukti pengaduan"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon512.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.hilmyhafizh.pengaduanapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Aplikasi memerlukan akses ke foto untuk upload bukti pengaduan",
          "cameraPermission": "Aplikasi memerlukan akses kamera untuk mengambil foto bukti pengaduan"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Aplikasi memerlukan akses lokasi untuk mencatat lokasi pengaduan"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "57483805-8d74-4d82-94e1-408c8ccd84e9"
      }
    },
    "owner": "marlblue"
  }
}
